<%= form_with(model: pokemon) do |form| %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokemon Form</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5; /* Light gray background */
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .pokeball-form {
            background-color: #fff; /* White form background */
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            padding: 20px;
            width: 80%;
            max-width: 400px;
        }

        .pokeball-header {
            background-color: #e60012; /* Pokeball Red header background */
            color: #fff; /* White text for contrast */
            text-align: center;
            padding: 10px;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .pokeball-input {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .pokeball-button {
            width: 100%;
            padding: 10px;
            background-color: #e60012; /* Pokeball Red button background */
            color: #fff; /* White text for contrast */
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>

<div class="pokeball-form">
    <div class="pokeball-header">
        <h2>Pokemon Registration</h2>
    </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :num, style: "display: block" %>
    <%= form.number_field :num %>
  </div>

  <div>
    <%= form.label :poke_type, style: "display: block" %>
    <%= form.text_field :poke_type %>
  </div>

  <div>
    <%= form.label :evolves, style: "display: block" %>
    <%= form.check_box :evolves %>
  </div>

  <div>
    <%= form.submit %>
  </div>
</div>

</body>
</html>
<% end %>

